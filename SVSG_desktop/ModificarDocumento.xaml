    Title="ProtoDetalle" Height="623.838" Width="958.45" ResizeMode="NoResize">
    <Grid Background="#FFD2E1FF">
        <Label Content="Código" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Width="60"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="60"/>
        <Label Content="Sección" HorizontalAlignment="Left" Margin="10,167,0,0" VerticalAlignment="Top" Width="94"/>
        <Label Content="Archivo" HorizontalAlignment="Left" Margin="10,322,0,0" VerticalAlignment="Top" Width="60"/>
        <Button x:Name="btn_archivo" Content="Seleccionar" HorizontalAlignment="Left" Margin="154,328,0,0" VerticalAlignment="Top" Width="169"/>
